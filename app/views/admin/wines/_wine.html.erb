  <tr>
    <td>
      <%= wine.id %>
    </td>
    <td>
      <%= wine.region.name %>
    </td>
    <td>
      <%= link_to wine.name, admin_wine_path(wine) %>
    </td>
    <td>
      <%= wine.jpn_name %>
    </td>
    <td>
      <%= wine.category_i18n %>
    </td>
    <td>
      <%= wine.color_i18n %>
    </td>
    <td>
      <div class="btn-group">
      <%= link_to t('defaults.show'), admin_wine_path(wine), class: 'btn btn-info' %>
      <%= link_to t('defaults.edit'), edit_admin_wine_path(wine), class: 'btn btn-success' %>
      <%= link_to t('defaults.delete'), admin_wine_path(wine), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
    </td>
  </tr>
