<header class="navbar bg-base-100 h-10">
  <div class="flex-1">
    <%= link_to root_path, class:'btn btn-ghost normal-case text-xl' do %>vino! vino!! vino!!! <% end %>
  </div>
  <div class="flex-none z-40 mr-5">
    <ul class="menu menu-horizontal px-1">
        <% if current_user %>
      <li><%= link_to 'クイズ', quizzes_path %></li>
      <li><%= link_to 'ワイン一覧', wines_path %></li>
      <li tabindex="0">
        <a>
          <%= image_tag current_user.avatar_url, class: 'mask mask-circle', size: '40x40' %>
          <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"/></svg>
        </a>
        <ul class="p-2 bg-base-100">
          <li><%= link_to t('defaults.profile'), profile_path %></li>
          <li><%= link_to Achievement.model_name.human, achievements_path %></li>
          <li><%= button_to t('defaults.logout'), :logout, method: :delete %></li>
        <% else %>
          <li><%= link_to t('defaults.register'), new_user_path %></li>
          <li><%= link_to t('defaults.login'), :login %></li>
        <% end %>
        </ul>
      </li>
    </ul>
  </div>
</header>
