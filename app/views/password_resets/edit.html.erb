<% content_for(:title, t('.title')) %>
<div class="container mx-auto mt-10 w-1/3">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :email %>
          <%= @user.email %>
        </div>
          <%= f.password_field :password, class: 'input form-control w-full bg-white my-3', placeholder: t('.new_password') %>
          <%= f.password_field :password_confirmation, class: 'input form-control w-full bg-white my-3', placeholder: t('.password_confirmation') %>
        <div class="actions">
          <p class="text-center">
            <%= f.submit class: 'btn btn-secondary' %>
          </p>
        </div>
      <% end %>
</div>
