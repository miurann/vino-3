<%= form_with model: @user, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'input form-control w-full bg-white my-3' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'input form-control w-full bg-white my-3' %>
  </div>
  <div class="form-group">
  <%= f.label :password %>
    <%= f.password_field :password, class: 'input form-control w-full bg-white my-3' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'input form-control w-full bg-white my-3' %>
  </div>
  <%= f.submit '登録', class: 'btn btn-secondary' %>
<% end %>
